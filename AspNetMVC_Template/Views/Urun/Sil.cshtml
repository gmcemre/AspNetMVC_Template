@using AspNetMVC_Template.Models
@model Urunler
@{
    ViewBag.Title = "Ürün Sil";
}

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Ürün Silme Sayfası
                </div>
                <div class="block-controls">
                    <a href="/Urun/Index">
                        <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>
                    </a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <form action="/Urun/Sil" method="post">
                        <input type="hidden" name="UrunID" value="@Model.UrunID" />
                        <label>@Model.UrunAdi ürünü silinsin mi?</label>
                        <input type="submit" value="Evet" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

